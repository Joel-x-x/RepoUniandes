<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="481dp"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/matematicasButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Matemáticas"
            android:textColorLink="#19656D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/inglesButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Ingles"
            android:textColorLink="#19656D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/informaticaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Informática"
            android:textColorLink="#19656D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/historiaButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Historia del Ecuador"
            android:textColorLink="#19656D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dispositivosButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Dispositivos móviles"
            android:textColorLink="#19656D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/resultadosButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Resultados finales"
            android:textColorLink="#19656D"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/nuevoIntentoButton"
        android:layout_width="265dp"
        android:layout_height="71dp"
        android:text="Nuevo intento"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.431" />
</androidx.constraintlayout.widget.ConstraintLayout>